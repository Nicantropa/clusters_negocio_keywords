import streamlit as st
import pandas as pd

# Este código es mínimo y no usa st.set_page_config() para evitar conflictos.

st.title("✅ Página 1: Limpieza (Prueba Definitiva)")

st.success("Si puedes ver esta página, ¡hemos resuelto el problema!")

st.info(
    """
    Esto confirma que el problema era una de dos cosas:
    1. Un conflicto con `st.set_page_config()`.
    2. Una codificación de archivo incorrecta que se solucionó al crear el archivo directamente en GitHub.
    """
)

# Dejamos un cargador de archivos simple para verificar la funcionalidad.
uploaded_file = st.file_uploader("Puedes subir un CSV para probar", type="csv")

if uploaded_file is not None:
    try:
        df = pd.read_csv(uploaded_file)
        st.write("Vista previa:")
        st.dataframe(df.head())
    except Exception as e:
        st.error(f"Error al leer el archivo: {e}")
